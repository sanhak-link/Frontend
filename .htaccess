  # 1. /api로 시작하는 요청은 백엔드(8080포트)로 토스!
  # (cPanel에서 자바 서버가 8080포트로 돌아가고 있을 때만 유효)
<IfModule mod_mime.c>
  AddType application/javascript .js
  AddType application/javascript .mjs
</IfModule>

<IfModule mod_rewrite.c>
  RewriteEngine On

  # 1. /api로 시작하는 요청은 백엔드(8080포트)로 토스!
  # (cPanel에서 자바 서버가 8080포트로 돌아가고 있을 때만 유효)
  RewriteRule ^api/(.*)$ http://3.26.33.204:8080/api/$1 [P,L]


  # 2. 나머지 파일 연결 (React 빌드 파일)
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # 3. React 라우팅 (새로고침 404 방지)
  RewriteRule ^ index.html [L]
</IfModule>